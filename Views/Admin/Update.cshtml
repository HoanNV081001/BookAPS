@model Book.Models.Genre
<form method="post" asp-controller="Admin" asp-action="Update">
    <div class="row p-3 border bg-white">
        <div class="col-12 border-bottom">
            <h2 class="display-2">Reset Password</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4"> ID</label></div>
                <div class="col-8"><input asp-for="Id" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Description">Description</label></div>
                <div class="col-8"><input asp-for="Description" class="form-control" /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Status">Status</label></div>
                <div class="col-8"><input asp-for="Status" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary ">Update</button>
                        </div>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>